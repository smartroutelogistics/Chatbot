# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/smartroute-chatbot

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000
WIDGET_URL=http://localhost:5000
WIDGET_CHAT_URL=http://localhost:3000

# OpenAI Configuration (Optional - for advanced NLP)
OPENAI_API_KEY=your_openai_api_key_here
USE_OPENAI=false

# Google Cloud Translation API (Optional - for translation)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Admin API Key (for analytics and management endpoints)
ADMIN_API_KEY=your_secure_admin_key_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CSP: Sites allowed to embed the chat UI in an iframe
# Separate with spaces or commas
ALLOWED_IFRAME_ORIGINS=http://localhost:3000 https://www.smartroutelogistics.com https://smartroutelogistics.com

# Widget configuration (optional; can be overridden by data-* attributes)
WIDGET_BUTTON_TEXT=Chat with SmartRoute
WIDGET_PRIMARY=#0ea5e9
WIDGET_POSITION=right
WIDGET_OFFSET_X=24px
WIDGET_OFFSET_Y=24px
WIDGET_WIDTH=380px
WIDGET_HEIGHT=560px
WIDGET_RADIUS=12px
WIDGET_SHADOW=0 10px 28px rgba(0,0,0,.18)
WIDGET_FONT=600 14px/1.2 Inter,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif
WIDGET_Z_INDEX=2147483640
WIDGET_ICON=
WIDGET_OPEN=false
WIDGET_GREETING=
WIDGET_CLOSE_ON_ESCAPE=true
